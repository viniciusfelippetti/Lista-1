#include <stdio.h>
#include <stdlib.h>


	int * inserirvalores(int *v,int n){
    int aux, n1,n2;
    for(int i=0;i<n;i++){
        scanf("%d",&aux);
        v[i] = aux;
    }
return v;
}
int * somar(int *v1, int *v2, int *v3, int n){
    for(int i=0;i<n;i++){
        v3[i]=v1[i]+v2[i];
    }
    return v3;
}
int main()
{
    int n;
    int *v1,*v2,*v3;
    printf("Tamanho do vetor usado:\n");
    scanf("%d",&n);
    v1 = (int*)malloc(n*sizeof(int));
    v2 = (int*)malloc(n*sizeof(int));
    v3 = (int*)malloc(n*sizeof(int));
    printf("Valores pro vetor1:\n");
    inserirvalores(v1,n);
    printf("valores pro vetor2:\n");
    inserirvalores(v2,n);
    v3 = somar(v1,v2,v3,n);
    printf("\nO vetor soma Ã© = \n");
    printf("\nREsultado\n\n");
    for (int i =0; i<n; i++){
        printf("%d\n",v3[i]);
    }
    free(v1);
    free(v2);
    free(v3);
}
